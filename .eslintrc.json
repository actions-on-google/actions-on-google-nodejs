{
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "extends": ["semistandard"],
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  },
  "plugins": [
    "chai-friendly",
    "chai-expect"
  ]
}
